@model IEnumerable<TimetableDTO>
@{
    string strTitle = "Заміни";
    ViewBag.Title = strTitle;
}
<div class="col-8 col-12-medium imp-medium">
    <div id="content">
        @if (Model.Any())
        {
            <section class="box article-list">
                <h2 class="icon fa-file-alt">
                    @strTitle
                </h2>
                @foreach (TimetableDTO entity in Model)
                {
                    <article class="box excerpt major">

                        <a asp-area="" asp-controller="Timetable" asp-action="" asp-route-id="@entity.Id">
                            <img style="height:300px; width:auto;" src="~/img/@entity.Changes" alt="" />
                        </a>
                    </article>
                }
            </section>
        }
        else
        {
            <h3>Записи відсутні</h3>
        }
    </div>
</div>