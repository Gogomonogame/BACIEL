@model Group
@{
    string strTitle = "Редагувати запис";
    ViewBag.Title = strTitle;
}
<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="" asp-controller="Admin" asp-action="GroupEdit" method="post">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="DateCreated"/>

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="GroupName"></label>
                <input asp-for="GroupName" />
                <span asp-validation-for="GroupName"></span>
            </div><p></p>
            <div class="div-box">
                <label asp-for="Speciality"></label>
                <input asp-for="Speciality" />
                <span asp-validation-for="Speciality"></span>
            </div><p></p>
            <div class="div-box">
                <label asp-for="Course"></label>
                <input asp-for="Course" />
                <span asp-validation-for="Course"></span>
            </div><p></p>
            <input type="submit" value="Зберегти" />
            
        </form>
    </div>
</div>